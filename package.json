{
	"name": "luminos-mobile",
	"version": "0.0.1",
	"private": true,
	"devDependencies": {
		"babel-core": "7.0.0-bridge.0",
		"babel-jest": "23.6.0",
		"metro-react-native-babel-preset": "0.51.1",
		"babel-eslint": "^10.0.1",
		"babel-preset-env": "^1.7.0",
		"eslint": "^5.12.0",
		"eslint-config-prettier": "^3.5.0",
		"eslint-plugin-react": "^7.12.4",
		"eslint-plugin-react-native": "^3.6.0",
		"eslint-watch": "^4.0.2",
		"husky": "^1.3.1",
		"jest": "^23.6.0",
		"jest-react-native": "^18.0.0",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3",
		"pretty-quick": "^1.10.0",
		"react-test-renderer": "16.7.0"
	},
	"scripts": {
		"eslint": "esw src",
		"watch": "esw -w --changed src/**",
		"start": "react-native start",
		"android-dev": "ENVFILE=.env.development react-native run-android",
		"android-production": "ENVFILE=.env.production react-native run-android",
		"android-staging": "ENVFILE=.env.staging react-native run-android",
		"ios": "react-native run-ios",
		"test": "jest",
		"build-debug-android": "react-native bundle --dev false --platform android --entry-file index.js --bundle-output ./android/app/build/intermediates/assets/debug/index.android.bundle --assets-dest ./android/app/build/intermediates/res/merged/debug && cd android && ./gradlew assembleDebug && cd .. && mkdir -p ./dist && rm -f ./dist/luminos-android-debug.apk && cp ./android/app/build/outputs/apk/app-debug.apk ./dist/luminos-android-debug.apk",
		"build-debug-android-dev": "export ENVFILE=.env.development && npm run build-debug-android",
		"build-debug-android-production": "export ENVFILE=.env.production && npm run build-debug-android",
		"build-release-android": "export ENVFILE=.env.production && cd android && ./gradlew assembleRelease && cd .. && mkdir -p ./dist && rm -f ./dist/luminos-android-release.apk && cp ./android/app/build/outputs/apk/release/app-release.apk ./dist/luminos-android-release.apk"
	},
	"jest": {
		"preset": "react-native",
		"transform": {
			"^.+\\.(js)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
		},
		"transformIgnorePatterns": [
			"/node_modules/(?!native-base)/"
		],
		"setupFiles": [
			"<rootDir>/__mocks__/react-native-languages.js",
			"<rootDir>/__mocks__/react-navigation.js"
		]
	},
	"dependencies": {
		"algoliasearch": "3.32.0",
		"axios": "0.18.0",
		"create-react-class": "15.6.3",
		"humps": "^2.0.1",
		"lodash": "4.17.11",
		"moment": "^2.23.0",
		"native-base": "2.10.0",
		"react": "^16.7.0",
		"react-moment": "0.8.4",
		"react-native": "^0.57.8",
		"react-native-camera": "https://github.com/lunalabs/react-native-camera/tarball/master",
		"react-native-circular-progress": "1.1.0",
		"react-native-config": "0.11.7",
		"react-native-emoji-input": "https://github.com/lunalabs/react-native-emoji-input/tarball/v1.3.0",
		"react-native-extended-stylesheet": "0.11.1",
		"react-native-fabric": "https://github.com/lunalabs/react-native-fabric/tarball/master",
		"react-native-gesture-handler": "^1.0.12",
		"react-native-i18n": "2.0.15",
		"react-native-keyboard-aware-scroll-view": "^0.8.0",
		"react-native-keychain": "3.0.0",
		"react-native-languages": "3.0.2",
		"react-native-onesignal": "^3.2.12",
		"react-native-permissions": "https://github.com/lunalabs/react-native-permissions/tarball/master",
		"react-native-splash-screen": "3.1.1",
		"react-native-svg": "9.0.0",
		"react-native-video": "^4.3.1",
		"react-navigation": "3.0.9",
		"react-redux": "6.0.0",
		"redux": "4.0.1",
		"redux-logger": "^3.0.6",
		"redux-thunk": "2.3.0",
		"rn-fetch-blob": "0.10.13",
		"validator": "^10.11.0"
	},
	"lint-staged": {
		"linters": {
			"*.{js,jsx}": [
				"pretty-quick --staged",
				"eslint --fix",
				"git add"
			]
		},
		"ignore": [
			"**/**.json"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"post-merge": "npm install"
		}
	},
	"rnpm": {
		"assets": [
			"./src/assets/fonts/"
		]
	}
}
